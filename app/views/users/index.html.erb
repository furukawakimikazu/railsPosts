<section class="navbar-expand-lg navbar-dark bg-success">
  <div class="container py-4">
    <h1 class="text-light">
      ユーザー一覧
    </h1>
  </div>
</section>

<section>
  <div class="container">
    <div class="row">
      <% @users.each do |user| %>
        <div class="col-md-3">
          <div class="card mt-4">
            <div class="card-image">
              <figure class="image">
                <%= link_to user do %>
                  <%= attachment_image_tag user, :profile_image, fallback: "no-image.png", class: 'img-fluid' %>
                <% end %>
              </figure>
              <div class="card-body">
                <h5 class="card-title text-center"><%= link_to user.username, user, class: 'text-success' %></h5>
              </div>
              <div class="content text-center text-success">
                投稿数：あとで実装
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>

