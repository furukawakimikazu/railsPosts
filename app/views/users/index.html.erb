<section class="navbar-expand-lg navbar-dark bg-success">
  <div class="d-flex py-3">
    <%= link_to root_path, class: 'nav-link' do %>
      <h1 class='text-light'>ユーザー一覧</h1>
    <% end %>
      <ul class="nav ml-auto">
        <li class="nav-item align-self-center mr-3">
          <h3>
            <%= link_to '投稿一覧', posts_path, class: 'nav-link text-light' %>
          </h3>
        </li>
      </ul>
  </div>
</section>

<section class='mt-5'>
  <div class="container">
    <div class="card-deck" style="width:30rem">
      <% @users.each do |user| %>
        <div class="card text-center">
          <div class="card-img-top">
            <%= link_to user do %>
              <%= attachment_image_tag user, :profile_image, fallback: "no-image.png", class: 'object-fit' %>
            <% end %>
          </div>

          <div class="card-body">
            <h5 class="card-title">
              <%= link_to user.username, user, class: 'text-success' %>
            </h5>
            <div class="posts-count">
              <p class="text-success">
                投稿数：あとで実装
              </p>
            </div>

          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
