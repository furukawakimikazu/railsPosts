<section class="navbar navbar-expand-lg navbar-dark bg-success">
  <div class="container py-3 d-flex">
    <h1 class="text-light">
      <%= @user.username %>さん
    </h1>
    <% if @user.id == current_user.id %>
    <p class= 'text-light ml-4'>
      <%= @user.email %>
    </p>
    <h5 class= 'ml-auto' >
      <%= link_to '#', class: 'text-light mr-2 text-decoration-none' do %>
        <%= @user.username %>さんの投稿一覧
      <% end %>
      <%= link_to '編集', edit_user_path(@user), class: 'text-light text-decoration-none' %>
    </h5>
    <% end %>
  </div>
</section>

<section>
  <div class="container mt-5">
    <div class="row">
      <div class="col-lg-5 offset-1 align-self-baseline">
          <%= attachment_image_tag @user, :profile_image, fallback: "no-image.png", class: 'img-fluid' %>
      </div>

      <div class="col-lg-5 pt-3 pt-lg-0 content">
        <%= simple_format @user.profile %>
      </div>
      
    </div>
  </div>
</section>



