<section class="navbar navbar-expand-lg navbar-dark bg-success">
  <div class="container py-3 d-flex">
    <h1 class="text-light">
      <%= @user.username %>さん
    </h1>
    <% if @user.id == current_user.id %>
    <p class= 'text-light ml-4'>
      <%= @user.email %>
    </p>
    <h5 class= 'ml-auto' >
      <%= link_to '編集', edit_user_path(@user), class: 'text-light' %>
    </h5>
    <% end %>
  </div>
</section>

<section>
  <div class="container mt-5">
    <div class="row my-2 border border-success">
      <div class="col-md-3 offset-1">
        <figure>
          <%= attachment_image_tag @user, :profile_image, fallback: "no-image.png", class: 'img-fluid' %>
        </figure>
      </div>
      <div class="col-md-7">
        <%= @user.profile %>
      </div>
    </div>
  </div>
</section>



